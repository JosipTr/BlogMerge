<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/post-form.css">
</head>
<%- include('../includes/header.ejs') %>
<section>
  <form action="/blog/edit-post" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= post.title %>" required>

    <label for="content">Content:</label>
    <textarea id="content" name="content" rows="8" required><%= post.content %></textarea>

    <div class="radio-container">
      <label for="public">Public:</label>
      <input type="radio" name="public" id="public" value="true" <% if (post.public) {%> checked="true" <% } %>>
    </div>

    <div class="radio-container">
      <label for="private">Private:</label>
      <input type="radio" name="public" id="private" value="false" <% if (!post.public) {%> checked="false" <% } %>>
    </div>
    <input type="hidden" name="id" id="id" value="<%= post._id %>">
    <button type="submit">Edit Post</button>
  </form>
</section>
<%- include('../includes/footer.ejs') %>